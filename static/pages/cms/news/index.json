{
  "type": "page",
  "name": "cms-news",
  "body": [
    {
      "type": "crud",
      "name": "cms_news",
      "api": {
        "method": "post",
        "url": "${API_BASEURL}/admin/cms/news/query",
        "data": {
          "order_fields": [
            {
              "field": "${orderBy}",
              "order_type": "${orderDir}"
            }
          ],
          "conditions": [
            {
              "disable": "${!title}",
              "op": "and",
              "field": "title",
              "condition_type": "like",
              "vals": [
                "%${title}%"
              ]
            },
            {
              "disable": "${!status || status == ''}",
              "op": "and",
              "field": "status",
              "condition_type": "eq",
              "vals": [
                "${status}"
              ]
            }
          ],
          "page": {
            "offset": "${(page - 1) * perPage}",
            "limit": "${perPage}",
            "query_count": true
          }
        }
      },
      "filter": {
        "title": "搜索",
        "body": [
          {
            "type": "group",
            "body": [
              {
                "label": "标题",
                "type": "input-text",
                "size": "sm",
                "name": "title",
                "clearable": true,
                "placeholder": "标题"
              },
              {
                "label": "状态",
                "type": "select",
                "size": "sm",
                "name": "status",
                "source": "${options['cms_news.status']}"
              }
            ]
          }
        ],
        "actions": [
          {
            "type": "button",
            "actionType": "drawer",
            "icon": "fa fa-plus",
            "label": "新增",
            "drawer": {
              "title": "新增数据",
              "size": "xl",
              "body": {
                "type": "form",
                "name": "add-form",
                "api": "POST:${API_BASEURL}/admin/cms/news/add",
                "body": [
                  {
                    "label": "标题",
                    "type": "input-text",
                    "name": "title"
                  },
                  {
                    "label": "内容",
                    "type": "textarea",
                    "name": "content",
                    "required": true
                  },
                  {
                    "label": "主题",
                    "type": "select",
                    "name": "topic",
                    "required": true,
                    "source": "POST:${API_BASEURL}/admin/cms/news/topics"
                  },
                  {
                    "label": "状态",
                    "type": "select",
                    "name": "status",
                    "source": "${options['cms_news.status']}",
                    "required": true
                  },
                  {
                    "label": "备注",
                    "type": "input-text",
                    "name": "remark"
                  }
                ]
              }
            }
          },
          {
            "type": "reset",
            "label": "重置"
          },
          {
            "type": "submit",
            "level": "primary",
            "label": "查询"
          }
        ]
      },
      "bulkActions": [
        {
          "label": "批量删除",
          "type": "button",
          "level": "danger",
          "actionType": "ajax",
          "api": {
            "method": "DELETE",
            "url": "${API_BASEURL}/admin/cms/news/del",
            "data": {
              "ids": "${ids}"
            }
          },
          "confirmText": "确定要批量删除?"
        }
      ],
      "quickSaveApi": {
        "method": "PATCH",
        "url": "${API_BASEURL}/admin/cms/news/batch-update",
        "data": {
          "rows": "${rowsDiff}"
        }
      },
      "footerToolbar": [
        "statistics",
        "switch-per-page",
        "pagination"
      ],
      "columns": [
        {
          "label": "-",
          "name": "id"
        },
        {
          "label": "标题",
          "name": "title"
        },
        {
          "label": "内容",
          "name": "content"
        },
        {
          "label": "主题",
          "name": "topic"
        },
        {
          "label": "备注",
          "name": "remark"
        },
        {
          "label": "状态",
          "type": "static",
          "name": "status",
          "tpl": "${getDictLabel('cms_news.status', status)}"
        },
        {
          "label": "更新时间",
          "type": "static",
          "name": "utime",
          "sortable": true,
          "tpl": "${utime | date:YYYY-MM-DD hh\\:mm\\:ss:x}"
        },
        {
          "label": "创建时间",
          "type": "static",
          "name": "ctime",
          "sortable": true,
          "tpl": "${ctime | date:YYYY-MM-DD hh\\:mm\\:ss:x}"
        },
        {
          "type": "operation",
          "label": "操作",
          "buttons": [
            {
              "type": "button",
              "icon": "fa fa-eye",
              "actionType": "drawer",
              "tooltip": "查看",
              "drawer": {
                "title": "查看信息",
                "size": "xl",
                "body": {
                  "type": "form",
                  "body": [
                    {
                      "label": "-",
                      "type": "static",
                      "name": "id"
                    },
                    {
                      "label": "标题",
                      "type": "static",
                      "name": "title"
                    },
                    {
                      "label": "内容",
                      "type": "static",
                      "name": "content"
                    },
                    {
                      "label": "主题",
                      "type": "static",
                      "name": "topic"
                    },
                    {
                      "label": "状态",
                      "type": "static",
                      "name": "status"
                    },
                    {
                      "label": "备注",
                      "type": "static",
                      "name": "remark"
                    },
                    {
                      "label": "更新时间",
                      "type": "static",
                      "name": "utime"
                    },
                    {
                      "label": "创建时间",
                      "type": "static",
                      "name": "ctime"
                    }
                  ]
                }
              }
            },
            {
              "type": "button",
              "icon": "fa fa-pencil",
              "tooltip": "编辑",
              "actionType": "drawer",
              "drawer": {
                "title": "修改记录",
                "size": "xl",
                "body": {
                  "type": "form",
                  "api": {
                    "method": "PUT",
                    "url": "${API_BASEURL}/admin/cms/news/update",
                    "data": {
                      "id": "${id}",
                      "title": "${title}",
                      "content": "${content}",
                      "topic": "${topic}",
                      "status": "${status}",
                      "remark": "${remark}"
                    },
                    "messages": {
                      "success": "修改成功"
                    }
                  },
                  "body": [
                    {
                      "label": "标题",
                      "type": "input-text",
                      "name": "title",
                      "required": true
                    },
                    {
                      "label": "内容",
                      "type": "input-text",
                      "name": "content",
                      "required": true
                    },
                    {
                      "label": "主题",
                      "type": "select",
                      "name": "topic",
                      "required": true,
                      "source": "POST:${API_BASEURL}/admin/cms/news/topics"
                    },
                    {
                      "label": "状态",
                      "type": "select",
                      "name": "status",
                      "source": "${options['cms_news.status']}",
                      "required": true
                    }
                  ]
                }
              }
            },
            {
              "type": "button",
              "icon": "fa fa-times text-danger",
              "actionType": "ajax",
              "tooltip": "删除",
              "confirmText": "您确认要删除[${id}]?",
              "api": {
                "method": "post",
                "url": "${API_BASEURL}/admin/cms/news/del",
                "data": {
                  "ids": "${id}"
                }
              }
            }
          ],
          "toggled": true
        }
      ],
      "affixHeader": true,
      "columnsTogglable": "auto",
      "placeholder": "暂无数据",
      "combineNum": 0,
      "bodyClassName": "panel-default"
    }
  ]
}
